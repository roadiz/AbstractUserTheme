{% extends "pages/base.html.twig" %}

{% block inner_content %}
    <div class="container">
        <header>
            <h1 class="page-title">{{ title }}</h1>
        </header>

        {% form_theme form 'account/forms.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <button class="btn btn-primary" type="submit">
                <span class="label"><span class="label-text">{% trans %}login_reset.button{% endtrans %}</span></span>
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
